{
  "manifest_version": 3,
  "name": "RespondX",
  "version": "1.0",
  "description": "Generate intelligent, personalized email responses in seconds with AI. Work smarter with Gmail's next evolution in communication.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://gmail-llm-based-auto-reply.vercel.app/*",
    "https://gmail-llm-based-auto-reply.onrender.com/*",
    "http://localhost:8000/*"
  ],
  "icons": {
    "16": "icon1.png",
    "48": "icon1.png",
    "128": "icon1.png"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon1.png"
  }
}