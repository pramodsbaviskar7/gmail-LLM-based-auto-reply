{
  "manifest_version": 3,
  "name": "Gmail Auto LLM Reply",
  "version": "1.0",
  "description": "Auto-generate Gmail replies using LLM via FastAPI",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [
    "https://mail.google.com/*",
    "http://localhost:8000/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}